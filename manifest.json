{
  "manifest_version": 2,
  "name": "Local Dictionary",
  "version": "1.0",
  "description": "Double click on any word to get its meaning",
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": ["background/background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/dictionary.js"]
    }
  ],
  "icons": {
    "48": "icons/icon.png"
  }
}
