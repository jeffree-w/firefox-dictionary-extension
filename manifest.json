{
    "manifest_version": 2,
    "name": "Highlight Dictionary",
    "version": "1.0",
    "description": "Highlight a word and get its meaning when you hover over it.",
    "permissions": [
      "activeTab",
      "https://api.dictionaryapi.dev/*"
    ],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "browser_action": {
      "default_popup": "popup.html"
    },
    "icons": {
      "48": "icon.png"
    }
  }
  